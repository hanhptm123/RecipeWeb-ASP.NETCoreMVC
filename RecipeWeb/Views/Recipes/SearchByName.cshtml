@model List<RecipeWeb.Data.Recipe>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

<form asp-controller="Recipes" asp-action="SearchByName" method="get">
    <input type="text" name="searchTerm" placeholder="Enter recipe name..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (Model.Count == 0)
{
    <p>No recipes found.</p>
}
else
{
    <ul class="list-group mt-3">
        @foreach (var recipe in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.RecipeId">
                    @recipe.RecipeName
                </a>
            </li>
        }
    </ul>
}
