@model IEnumerable<RecipeWeb.Data.Favourite>

@{
    ViewData["Title"] = "My Favourite Recipes";
}

<div class="container mt-4">
    <h2 class="text-primary text-center mb-4">My Favourite Recipes</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-heart-broken"></i> You have no favourite recipes yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var favourite in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <!-- Hình ảnh -->
                        <div class="image-container">
                            <img src="@favourite.Recipe.ImageUrl" class="card-img-top" alt="Recipe Image">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@favourite.Recipe.RecipeName</h5>
                            <p class="text-muted text-center">Category: @favourite.Recipe.Category?.CategoryName</p>

                            <!-- Button -->
                            <div class="mt-auto">
                                <a asp-controller="Recipes" asp-action="Details" asp-route-id="@favourite.Recipe.RecipeId"
                                   class="btn btn-primary w-100">
                                    <i class="fas fa-eye"></i> View Recipe
                                </a>

                                <form method="post" asp-controller="Favourites" asp-action="RemoveFromFavourites" class="mt-2">
                                    <input type="hidden" name="recipeId" value="@favourite.Recipe.RecipeId" />
                                    <button type="button" class="btn btn-danger w-100 remove-fav" data-recipe-id="@favourite.Recipe.RecipeId">
                                        <i class="fas fa-trash-alt"></i> Remove
                                    </button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


<style>
    .image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
</style>

<script>
    $(document).ready(function () {
        $(".remove-fav").click(function () {
            var button = $(this);
            var recipeId = button.data("recipe-id");

            $.ajax({
                url: "/Favourites/RemoveFromFavourites",
                type: "POST",
                data: { recipeId: recipeId },
                success: function (response) {
                    if (response.success) {
                        button.closest(".col-md-4").fadeOut(300, function () {
                            $(this).remove();
                        });
                    } else {
                        alert("❌ Error: " + response.message);
                    }
                },
                error: function () {
                    alert("❌ Failed to remove favourite. Please try again.");
                }
            });
        });
    });
</script>


