@model List<RecipeWeb.Data.Recipe>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Search Recipes by Ingredients";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">🔍 Search Recipes by Ingredients</h2>

    <!-- Form nhập nguyên liệu -->
    <form method="get" asp-action="SearchByIngredients" class="d-flex justify-content-center mb-4">
        <div class="input-group w-50">
            <label class="input-group-text" for="ingredients">Ingredients</label>
            <input type="text" name="ingredients" id="ingredients" class="form-control"
                   placeholder="e.g., chicken, garlic, onion">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Hiển thị kết quả -->
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @if (Model.Any())
        {
            @foreach (var recipe in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-lg">
                        <!-- Header -->
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@recipe.RecipeName</h5>
                            <div class="status-icon-wrapper position-relative">
                                @if (recipe.IsApproved == true)
                                {
                                    <i class="fas fa-check-circle text-accepted" title="Accepted"></i>
                                }
                                else if (recipe.IsApproved == false)
                                {
                                    <i class="fas fa-times-circle text-danger" title="Cancelled" onclick="toggleReason(this)" style="cursor:pointer;"></i>
                                    <div class="reason-box alert alert-danger" style="display: none;">
                                        @recipe.RejectReason
                                    </div>
                                }
                                else
                                {
                                    <i class="fas fa-hourglass-half text-warning" title="Pending"></i>
                                }
                            </div>
                        </div>

                        <!-- Body -->
                        <div class="card-body d-flex flex-column">
                            <div class="text-center">
                                <img src="@(string.IsNullOrEmpty(recipe.ImageUrl) ? "/images/default-recipe.png" : recipe.ImageUrl)"
                                     alt="Recipe Image" class="img-fluid rounded mb-2 recipe-img">
                            </div>
                            <p class="text-muted flex-grow-1">@recipe.Description</p>
                            @if (recipe.IsApproved == true)
                            {
                                @await Component.InvokeAsync("RatingAverage", new { recipeId = recipe.RecipeId })
                            }
                            <p><strong>⏳ Cook Time:</strong> @recipe.CookTime min</p>
                            <p><strong>📌 Category:</strong> @recipe.Category?.CategoryName</p>
                            <p><strong>🌍 Origin:</strong> @recipe.Origin?.OriginName</p>
                            <p><strong>📅 Posted On:</strong> @(recipe.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                            <p><strong>👨‍🍳 Created by:</strong> @(recipe.User?.UserName ?? "Ẩn danh")</p>
                        </div>

                        <!-- Footer -->
                        <div class="card-footer d-flex justify-content-center">
                            <a asp-action="Details" asp-route-id="@recipe.RecipeId" class="btn btn-info">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">No recipes found matching the given ingredients.</div>
        }
    </div>
</div>

<!-- Custom CSS -->
<style>
    .recipe-img {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }

    .status-icon-wrapper {
        font-size: 20px;
        position: relative;
    }

    .text-accepted {
        color: #00ff99;
    }

    .card-body {
        min-height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .reason-box {
        position: absolute;
        top: 110%;
        right: 0;
        z-index: 1050;
        white-space: nowrap;
        padding: 5px 10px;
        font-size: 0.9rem;
    }
</style>

<script>
    function toggleReason(iconElement) {
        const reasonBox = iconElement.nextElementSibling;
        reasonBox.style.display = reasonBox.style.display === "block" ? "none" : "block";
    }
</script>
