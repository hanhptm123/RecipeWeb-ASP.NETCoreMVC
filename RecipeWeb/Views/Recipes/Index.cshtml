@model List<RecipeWeb.Data.Recipe>
@{
    ViewData["Title"] = "Recipes List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">üçΩÔ∏è Recipes</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Recipe
        </a>
    </div>

    <!-- B·ªô l·ªçc tr·∫°ng th√°i -->
    <div class="text-center mb-3">
        <a asp-action="Index" asp-route-status="accepted" class="btn btn-success">‚úÖ Accepted</a>
        <a asp-action="Index" asp-route-status="pending" class="btn btn-warning">‚è≥ Pending</a>
        <a asp-action="Index" asp-route-status="cancelled" class="btn btn-danger">‚ùå Cancelled</a>
    </div>

    <!-- Danh s√°ch c√¥ng th·ª©c -->
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var recipe in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg">
                    <!-- Header -->
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@recipe.RecipeName</h5>
                        <div class="status-icon-wrapper position-relative">
                            @if (recipe.IsApproved == true)
                            {
                                <i class="fas fa-check-circle text-accepted" title="Accepted"></i>
                            }
                            else if (recipe.IsApproved == false)
                            {
                                <!-- Icon t·ª´ ch·ªëi -->
                                <i class="fas fa-times-circle text-danger" title="Cancelled" onclick="toggleReason(this)" style="cursor:pointer;"></i>

                                <!-- Khung l√Ω do b·ªã t·ª´ ch·ªëi -->
                                <div class="reason-box alert alert-danger"
                                     style="display: none;">
                                 @recipe.RejectReason
                                 </div>
                            }
                            else
                            {
                                <i class="fas fa-hourglass-half text-warning" title="Pending"></i>
                            }
                        </div>
                    </div>

                    <!-- Body -->
                    <div class="card-body d-flex flex-column">
                        <div class="text-center">
                            @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                            {
                                <img src="@recipe.ImageUrl" alt="Recipe Image" class="img-fluid rounded mb-2 recipe-img">
                            }
                            else
                            {
                                <img src="/images/default-recipe.png" alt="Default Image" class="img-fluid rounded mb-2 recipe-img">
                            }
                        </div>
                        <p class="text-muted flex-grow-1">@recipe.Description</p>
                        @if (recipe.IsApproved == true)
                        {
                            @await Component.InvokeAsync("RatingAverage", new { recipeId = recipe.RecipeId })
                        }

                        <p><strong>‚è≥ Cook Time:</strong> @recipe.CookTime min</p>
                        <p><strong>üìå Category:</strong> @recipe.Category?.CategoryName</p>
                        <p><strong>üåç Origin:</strong> @recipe.Origin?.OriginName</p>
                        <p><strong>üìÖ Posted On:</strong> @(recipe.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                        <p><strong>üë®‚Äçüç≥ Created by:</strong> @(recipe.User?.UserName ?? "·∫®n danh")</p>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@recipe.RecipeId" class="btn btn-info">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a asp-action="Edit" asp-route-id="@recipe.RecipeId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@recipe.RecipeId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom CSS -->
<style>
    .recipe-img {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }

    .status-icon-wrapper {
        font-size: 20px;
        position: relative;
    }

    .text-accepted {
        color: #00ff99;
    }

    .card-body {
        min-height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .reason-box {
        position: absolute;
        top: 110%;
        right: 0;
        z-index: 1050;
        white-space: nowrap;
        padding: 5px 10px;
        font-size: 0.9rem;
    }
</style>

<script>
    function toggleReason(iconElement) {
        const reasonBox = iconElement.nextElementSibling;
        if (reasonBox.style.display === "none" || reasonBox.style.display === "") {
            reasonBox.style.display = "block";
        } else {
            reasonBox.style.display = "none";
        }
    }
</script>
