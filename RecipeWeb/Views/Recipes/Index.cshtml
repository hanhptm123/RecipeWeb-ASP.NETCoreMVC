@model List<RecipeWeb.Data.Recipe>
@{
    var favouriteRecipes = ViewBag.FavouriteRecipes as List<int> ?? new List<int>();
}


@{
    ViewData["Title"] = "Recipes List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">🍽️ Recipes</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Recipe
        </a>
    </div>

    <div class="d-flex flex-wrap justify-content-start gap-3">
        @foreach (var recipe in Model)
        {
            <div class="card shadow-lg" style="width: 20rem;">
                <div class="card-header bg-primary text-white text-center d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@recipe.RecipeName</h5>
                    <!-- Nút yêu thích -->
                    <button class="btn btn-light fav-button" data-recipe-id="@recipe.RecipeId">
                        <i class="fav-icon @(favouriteRecipes.Contains(recipe.RecipeId) ? "fas fa-heart text-danger" : "far fa-heart text-muted")"></i>
                    </button>

                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                    {
                        <img src="@recipe.ImageUrl" alt="Recipe Image" class="img-fluid rounded mb-2" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <p class="text-muted">No Image Available</p>
                    }

                    <p class="text-muted">@recipe.Description</p>
                    <p><strong>⏳ Cook Time:</strong> @recipe.CookTime min</p>
                    <p><strong>📌 Category:</strong> @recipe.Category?.CategoryName</p>
                    <p><strong>🌍 Origin:</strong> @recipe.Origin?.OriginName</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@recipe.RecipeId" class="btn btn-info">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a asp-action="Edit" asp-route-id="@recipe.RecipeId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@recipe.RecipeId" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        }

    </div>
</div>
<!-- AJAX -->
<script>
    $(document).ready(function () {
        $(document).on("click", ".fav-button", function () {
            var button = $(this);
            var recipeId = button.data("recipe-id");
            var icon = button.find(".fav-icon");

            console.log("✅ Click event fired for Recipe ID:", recipeId); // Debug

            $.ajax({
                url: "/Favourites/ToggleFavourite",
                type: "POST",
                data: { recipeId: recipeId },
                success: function (response) {
                    console.log("✅ Response:", response);
                    if (response.success) {
                        // Thay đổi icon trái tim ngay lập tức mà không cần gọi API khác
                        if (icon.hasClass("far")) {
                            icon.removeClass("far text-muted").addClass("fas text-danger");
                        } else {
                            icon.removeClass("fas text-danger").addClass("far text-muted");
                        }
                    } else {
                        alert("❌ Error: " + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    console.log("❌ AJAX Error:", xhr.responseText);
                    alert("Request failed: " + error);
                }
            });
        });
    });

</script>

