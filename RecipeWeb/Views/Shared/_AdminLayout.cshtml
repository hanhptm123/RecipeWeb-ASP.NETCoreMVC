<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cooking_W_Loc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cooking_W_Loc.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="mb-2">
        <nav class="navbar navbar-expand-lg" style="background-color: #C6FF99; padding: 10px;">
            <div class="container-fluid d-flex align-items-center">

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/Avatar_brand.png" asp-append-version="true" alt="Logo" width="80" height="80" class="rounded-circle">
                </a>

                <!-- Home & Menu -->
                <div class="d-flex align-items-center">
                    <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> HOME
                    </a>
                    <button class="btn btn-outline-dark ms-2">
                        <i class="bi bi-list"></i> Menu
                    </button>
                </div>

                <!-- Thanh tìm kiếm -->
                <form class="d-flex flex-grow-1 mx-3">
                    <input class="form-control rounded-pill px-4" type="search" placeholder="Search">
                    <button class="btn btn-light ms-2" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
                <!-- Sign & Profile -->
                <div class="d-flex align-items-center">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="text-dark fw-bold me-3" href="@Url.Action("Login", "Users")">Log in</a>
                    }
                   

                    @if (User.Identity.IsAuthenticated)
                    {
                        @await Component.InvokeAsync("Avatar")
                    }


                    <a asp-controller="Favourites" asp-action="MyFavourites" class="ms-4 mt-2 d-inline-block text-dark fw-bold">
                        <i class="fa-regular fa-bookmark me-1"></i> Favorite recipe
                    </a>
                </div>

            </div>
        </nav>
    </header>
    <div class="main container row m-3">
        <div class="row">
            <div class="col-3">
                <!-- Sidebar -->
                <div class="sidebar p-3 rounded">
                    <div class="list-group">
                        <a href="/Recipes/ApproveList" class="list-group-item list-group-item-action">Approve Recipe</a>
                        <a href="/Recipes/TopRecipes" class="list-group-item list-group-item-action">Top Recipe</a>
                        <a href="/Users/UserManagement" class="list-group-item list-group-item-action">User Management</a>
                        <a href="/Favourites/TopFavouriteRecipes" class="list-group-item list-group-item-action">Top Favourite Recipes </a>
                        <a href="#" class="list-group-item list-group-item-action">...</a>
                    </div>
                </div>
            </div>
            <div class="container col-8">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="custom-footer mt-auto">
        <p>&copy; @DateTime.Now.Year My Website. All rights reserved.</p>

        <div class="footer-content">
            <nav>
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
                <a href="#">Contact</a>
            </nav>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .main {
        border: 2px solid #8fd19e; /* Viền màu xanh nhạt */
        border-radius: 10px; /* Bo góc nhẹ */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng */
        width: 100%; /* Hoặc một giá trị cụ thể như 80% */
        margin: 0 auto; /* Căn giữa */
        display: flex;
        flex-direction: column;
    }

    .body {
        border: 2px solid #8fd19e; /* Viền màu xanh nhạt */
        border-radius: 10px; /* Bo góc nhẹ */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng */
        width: 100%; /* Hoặc một giá trị cụ thể như 80% */
        margin: 0 auto; /* Căn giữa */
        display: flex;
        flex-direction: column;
    }

    .sidebar {
        margin-top: 20px;
        background-color: #b2f2bb;
        height: 100vh; /* Chiều cao toàn màn hình */
        overflow-y: auto; /* Thêm thanh cuộn nếu nội dung dài */
    }

        .sidebar .list-group-item:nth-child(odd) {
            background-color: #8fd19e;
            color: black;
        }

        .sidebar .list-group-item:nth-child(even) {
            background-color: #b2f2bb;
            color: black;
        }

    .profile-card {
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    html, body {
        height: 100%;
        margin: 0;
    }

    .custom-footer {
        background-color: #C1FF8A;
        padding: 15px 0;
        text-align: center;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

        .footer-content p {
            margin: 0;
            font-size: 14px;
            color: #000;
        }

        .footer-content nav a {
            margin-left: 15px;
            text-decoration: none;
            color: #000;
            font-weight: bold;
        }

            .footer-content nav a:hover {
                text-decoration: underline;
            }
</style>