@model List<RecipeWeb.Data.Recipe>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Search Recipes by Ingredients";
}

<h2>Search Recipes by Ingredients</h2>

<!-- Form nhập nguyên liệu -->
<form method="get" asp-action="SearchByIngredients">
    <label for="ingredients">Enter ingredients (comma-separated):</label>
    <input type="text" name="ingredients" id="ingredients" placeholder="e.g., chicken, garlic, onion">
    <button type="submit">Search</button>
</form>

<!-- Hiển thị kết quả tìm kiếm -->
@if (Model.Any())
{
    <h3>Matching Recipes</h3>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Recipe Name</th>
                <th>View Count</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].RecipeName</td>
                    <td>@Model[i].Countview</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No recipes found matching the given ingredients.</p>
}

