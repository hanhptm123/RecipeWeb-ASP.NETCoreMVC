@model RecipeWeb.Data.Recipe

<h2 class="text-center">Edit Recipe</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="RecipeId" />

    <!-- Recipe Title -->
    <div class="mb-3">
        <label class="form-label fw-bold">Recipe Title</label>
        <input type="text" asp-for="RecipeName" class="form-control" required />
    </div>

    <!-- Recipe Description -->
    <div class="mb-3">
        <label class="form-label fw-bold">Recipe Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <!-- Categories -->
    <div class="mb-3">
        <label class="form-label fw-bold">Categories</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <!-- Recipe Image Upload -->
    <div class="mb-3 text-center">
        <label class="form-label fw-bold">Recipe Image</label>
        <div>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Recipe Image" class="img-thumbnail mb-2" width="200" />
            }
            <input type="file" name="imageFile" class="form-control" />
        </div>
    </div>

    <!-- Cook Time & Serving Size -->
    <div class="row">
        <div class="col-md-6">
            <label class="form-label fw-bold">Cook Time (Minutes)</label>
            <input type="number" asp-for="CookTime" class="form-control" min="1" />
        </div>
        
    </div>

    <!-- Origin -->
    <div class="mb-3">
        <label class="form-label fw-bold">Origin</label>
        <select asp-for="OriginId" class="form-control" asp-items="ViewBag.Origins">
            <option value="">-- Select Origin --</option>
        </select>
    </div>


    <!-- Instructions -->
    <div class="mb-3">
        <label class="form-label fw-bold">Instructions</label>
        <textarea asp-for="Instructions" class="form-control" rows="5" placeholder="Enter step-by-step instructions"></textarea>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
        <button type="submit" class="btn btn-success px-4">Save</button>
    </div>
</form>
